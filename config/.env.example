# ============================================
# Ad Ops Command - Environment Configuration
# ============================================

# ============================================
# Google Ads Configuration
# ============================================
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_CUSTOMER_ID=1234567890
GOOGLE_ADS_LOGIN_CUSTOMER_ID=9876543210

# ============================================
# Meta Ads (Facebook/Instagram) Configuration
# ============================================
META_APP_ID=1234567890
META_APP_SECRET=your_app_secret_here
META_ACCESS_TOKEN=your_long_lived_access_token_here
META_AD_ACCOUNT_ID=act_1234567890

# ============================================
# Pinterest Ads Configuration
# ============================================
# App credentials from developers.pinterest.com/apps
PINTEREST_APP_ID=1234567890
PINTEREST_APP_SECRET=your_app_secret_here

# Access token from OAuth2 flow (valid 90 days)
# Generate at: https://developers.pinterest.com/tools/access_token/
PINTEREST_ACCESS_TOKEN=pina_ABC123def456ghi789jkl012mno345pqr678stu901vwx234yz

# Ad account ID (find at ads.pinterest.com)
# Format: 12-digit number (e.g., 549755885175)
PINTEREST_AD_ACCOUNT_ID=549755885175

# ============================================
# Microsoft Advertising (Bing Ads) Configuration
# ============================================
# Azure AD app credentials (from portal.azure.com)
MICROSOFT_ADS_CLIENT_ID=your_azure_app_client_id_here
MICROSOFT_ADS_CLIENT_SECRET=your_azure_app_client_secret_here

# OAuth2 refresh token (from authorization flow)
# See MICROSOFT_ADS_SETUP.md for OAuth2 flow instructions
MICROSOFT_ADS_REFRESH_TOKEN=M.R3_BAY.CdGsWd7Jvb...

# Developer token (from developers.ads.microsoft.com)
# Format: 9 characters (e.g., BBD37VB98)
MICROSOFT_ADS_DEVELOPER_TOKEN=your_developer_token_here

# Account credentials (from ads.microsoft.com)
MICROSOFT_ADS_ACCOUNT_ID=123456789
MICROSOFT_ADS_CUSTOMER_ID=987654321

# ============================================
# LinkedIn Ads Configuration
# ============================================
# App credentials from developers.linkedin.com
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# Access token from OAuth2 flow (valid 60 days)
# See LINKEDIN_ADS_SETUP.md for OAuth2 flow instructions
LINKEDIN_ACCESS_TOKEN=AQXdw...your_access_token_here

# Ad account URN (from ads.linkedin.com)
# Format: urn:li:sponsoredAccount:123456789
LINKEDIN_AD_ACCOUNT_ID=urn:li:sponsoredAccount:123456789

# ============================================
# TikTok Ads Configuration
# ============================================
# Long-lived access token from TikTok Marketing API
# Apply for access at: ads.tiktok.com/marketing_api
TIKTOK_ACCESS_TOKEN=your_long_lived_access_token_here

# Advertiser ID (from ads.tiktok.com)
# Format: 10-digit number (e.g., 9876543210)
TIKTOK_ADVERTISER_ID=9876543210

# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=./database/ad-ops-command.db

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Optional: Analytics & Integrations
# ============================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Email notifications (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@example.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_FROM=notifications@ad-ops-command.com
EMAIL_TO=team@example.com
